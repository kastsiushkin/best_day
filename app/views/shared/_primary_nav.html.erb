<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#collapse-navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "Home", root_path, class: "navbar-brand" %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="collapse-navbar">
      <ul class="nav navbar-nav">
        <% if controller_name == 'static_pages' %>
        <li> <%= link_to "Browse Days", days_path %> </li>
        <% end %>
      </ul>

      <% if controller_name == 'days' %>
        <%= form_tag(days_path, :method => "get", id: "search-form", class: "navbar-form navbar-left") do %>
          <div class="input-group">
            <%= text_field_tag :search, params[:search], :autofocus => true, placeholder: "San Francisco", class: "form-control" %>
            <span class="input-group-btn">
              <%= button_tag(type: 'submit', class: "btn btn-default") do %>
              <i class="fa fa-search"></i>
              <% end %>
            </span>
          </div>
        <% end %>
        <%= link_to "Add My Day", new_day_path, class: "btn btn-primary btn-sm navbar-btn navbar-left" %>
      <% end %>

      <% if user_signed_in? %>
        <%= link_to "Sign Out #{current_user.username}", destroy_user_session_path, method: :delete, class: "btn btn-default btn-sm navbar-right navbar-btn" %>
      <% else %>
      <form class="navbar-form navbar-right" role="search">
        <%= link_to "Sign In", new_user_session_path, class: "btn btn-default btn-sm" %>
        <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-primary btn-sm" %>
      </form>
      <% end %>

    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
